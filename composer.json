{
    "name": "ehystiv/sr-make",
    "description": "Simple Repository & Service generator for Laravel",

    "type": "library",
    "version": "1.0.0",

    "authors": [
      {
        "name": "Stefano Bichicchi",
        "email": "ehystiv@gmail.com"
      }
    ],
    "license": "MIT",

    "require": {
        "php": "^8.0",
        "illuminate/support": "^11.32"
    },
    "require-dev": {
      "pestphp/pest": "^3.5",
      "orchestra/testbench": "^9.5"
    },

    "autoload": {
        "psr-4": {
            "Ehystiv\\SrMake\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Ehystiv\\SrMake\\Tests\\": "tests/"
        }
    },

    "extra": {
      "laravel": {
        "providers": [
          "Ehystiv\\SrMake\\Providers\\PackageServiceProvider"
        ]
      }
    },

    "minimum-stability": "stable",
    "prefer-stable": true,

    "config": {
      "sort-packages": true,
      "preferred-install": "dist",
      "optimize-autoloader": true,
      "allow-plugins": {
        "pestphp/pest-plugin": true
      }
  }
}
